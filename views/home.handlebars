<!doctype html>
<html>
<head>
  <title>The Parking App</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <style>
  	#map {
    	height: 400px;
    	width: 100%;
  	}
  	.hide {
  		overflow: hidden;
  	}
  </style>
</head>
<body>
  <div class="container">
	  <h3>The Parking App</h3>
  	<div id="map" height="460px" width="100%"></div>
    <button class="btn-primary" onclick='useGPS()'>Use My Location</button>
	
  	<div class="hide">
		  <div id="form">
	      <table>
	      	<tr><td>Availability:</td> <td><input type='number' id='availability'/> </td> </tr>
	      	<tr><td></td><td><input type='button' value='Submit' onclick='submitData()'/></td></tr>
	      </table>
		  </div>
      <div id="availabilitywindow">Availability</div>
		  <div id="message">Thanks!</div>
      <div id="errormessage">Oops! Something went wrong.</div>
	  </div>
    <script src="/js/map_functions.js"></script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC--AF8pq1I9ebA-t-VOmW7eNWVqXqckw8&callback=initMap"></script>
  </div>
</body>
</html>
